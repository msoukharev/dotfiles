if macos(); then

    export CLICOLOR=1
    export LSCOLORS=GxFxCxDxBxegedabagaced
    alias ls="ls -G"

elif linux(); then

    export CLI_COLOR=1
    export LS_COLORS="di=1;36:ln=1;35:so=1;32:pi=1;33:ex=1;31:bd=34;46:cd=34;43:su=30;41:sg=30;46:tw=30;42:ow=34;43"
    alias ls="ls --color=auto"
fi

alias lla="ls -la"

alias la="ls -a"

alias ll="ls -l"

# Human readable sizes
llh() {
    ls -lh $@
}